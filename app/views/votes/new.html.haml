-htitle '创建投票'
  
.page-go-back
  =link_to '返回投票列表', '/votes'

.page-new-vote
  = flash.now[:error]
  
  = form_for @vote, :url => { :action => "create" } do |f|
    .field
      %label.need 投票描述
      = f.text_field :title
    
    .field
      %label.need 选项设置
      .item-list
        = f.fields_for :vote_items do |item_f|
          .item
            = item_f.text_field :item_title
            %a.delete{:href=>'javascript:;'} 删除
      %a.add-new-item{:href=>'javascript:;'} 增加一项
      
    .field
      %label.need 单选，多选设置
      %select.limit{:name=>'vote[select_limit]'}
        %option{:value=>'1'} 单选
        %option{:value=>'2'} 最多选2项
        
    .field
      %a.form-submit-button{:href=>'javascript:;'} 发起
        
